{
    "compilerOptions": {
        "module"             : "NodeNext",
        "target"             : "ESNext",
        "strictFunctionTypes": true,
        "strict"             : true,
        "esModuleInterop"    : true,
        "moduleResolution"   : "NodeNext",
        "skipLibCheck"       : true,
        "outDir"             : "dist",
        "rootDir"            : "src",
        "resolveJsonModule"  : true,
        "sourceMap"          : true,
        "declaration"        : true,
        "declarationMap"     : true,
        "declarationDir"     : "dist",
        "importHelpers"      : true,
        "plugins"            : [
            {
                "transform": "typia/lib/transform"
            }
        ],
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ]
}